
<div id = "<%= dom_id(@task) %>">
<% if @task && @task.errors.any? %>
  <div class="alert alert-danger">
      <p>The form contains <strong><%= pluralize(@task.errors.count, "error") %></strong>.</p>
    <ul>
      <% @task.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <!-- form for adding a task  -->
  <%= form_for [@project, @task || Task.new], remote: true do |f| %>
    <div class = "form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class = "form-group">
      <%= f.label :due_date %>
      <%= f.date_select :due_date, class: "form-control" %>
    </div>
    <div class = "form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
