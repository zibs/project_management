<li id = "<%= dom_id(task) %>">
  <p><%= task.title %></p>
  <%= render "tasks/done", task: task %>
  <%= link_to "Edit", edit_task_path(task),
                      
                      remote: true %>

  <%= link_to "Delete", [@project, task],
                        method: :delete,
                        remote: true,
                        data: { confirm: "Are you sure?"} %>
</li>
