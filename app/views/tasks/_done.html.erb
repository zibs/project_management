<% if task.done %>
  <%= link_to("Undo",
       project_task_path(task.project_id, task, "task[done]" => false),
       method: :put,
       remote: true,
       confirm: { data: "Mark as Done?"}) %>
<% else %>
<%= link_to("Done",
       project_task_path(task.project_id, task, "task[done]" => true),
       method: :put,
       remote: true,
       confirm: { data: "Mark as Undone?"}) %>
<% end %>
