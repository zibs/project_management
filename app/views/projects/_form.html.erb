<% if @project.errors.any? %>
<ul>
  <% @project.errors.full_messages.each do |error_msg| %>
    <li style = "color: red"><%= error_msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @project do |f| %>
<div>
<%= f.label :title %>
<%= f.text_field :title %>
</div>
<div>
<%= f.label :description %>
<%= f.text_area :description %>
</div>
<div>
<%= f.label :due_date %>
<%= f.date_select :due_date %>
</div>
<div>
  <%= submit_tag  %>
</div>
<% end %>
